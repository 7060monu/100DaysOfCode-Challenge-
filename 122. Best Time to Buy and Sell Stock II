class Solution {
public:
    int solvebyrec(vector<int>& prices, int i,int buy,vector<vector<int>>&dp) {
        if (i == prices.size()) return 0;
        int profit = 0;
        if(dp[i][buy]!=-1){
            return dp[i][buy];
        }
        
        if(buy){
            int include = -prices[i]+solvebyrec(prices,i+1,0,dp);
            int exclude = solvebyrec(prices,i+1,1,dp);

            profit = max(include,exclude);
        }
        else{
            int include = prices[i]+solvebyrec(prices,i+1,1,dp);
            int exclude = solvebyrec(prices,i+1,0,dp);

            profit = max(include,exclude);
        }
        return dp[i][buy]= profit;
        

    }

    int maxProfit(vector<int>& prices) {
        vector<vector<int>>dp(prices.size()+1,vector<int>(2,-1));
        return solvebyrec(prices, 0,1,dp);
    }
};
